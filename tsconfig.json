{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES6",
    "moduleResolution": "Node",
    "lib": ["es6","es7","es2015"],
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./lib",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "*.d.ts"
  ]
}